{
  "srcPaths": {
    "make": "src/make/iasc.make",
    "drupal": "src"
  },
  "buildPaths": {
    "build": "build",
    "html": "build/html",
    "package": "build/packages",
    "reports": "build/reports",
    "temp": "build/temp"
  },
  "siteUrls": {
    "default": "http://iasc.local"
  },
  "packages": {
    "srcFiles": ["!sites/*/files/**", "!xmlrpc.php", "!modules/php/*"],
    "projFiles": ["README*", "bin/**"]
  },
  "phpcs": {
    "path": "bin/phpcs",
    "dir": [
      "src/**/*.php",
      "src/**/*.module",
      "src/**/*.inc",
      "src/**/*.install",
      "src/**/*.profile",
      "!src/modules/iasc_scrape/**/*.php",
      "!src/sites/**",
      "!src/**/*.box.inc",
      "!src/**/*.features.*inc",
      "!src/**/*.pages_default.inc",
      "!src/**/*.panelizer.inc",
      "!src/**/*.strongarm.inc"
    ]
  },
  "phpmd": {
    "path": "bin/phpmd"
  },
  "drush": {
    "cmd": "bin/drush",
    "make": {
      "args": ["--concurrency=1", "--contrib-destination=profiles/openatrium"]
    }
  },
  "behat": {
    "flags": "--tags ~@wip"
  }
}