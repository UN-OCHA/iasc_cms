{
  "srcPaths": {
    "make": "src/make/iasc.make",
    "drupal": "src"
  },
  "buildPaths": {
    "build": "build",
    "html": "build/html",
    "package": "build/packages",
    "reports": "build/reports",
    "temp": "build/temp"
  },
  "siteUrls": {
    "default": "http://iasc.local"
  },
  "packages": {
    "srcFiles": ["!sites/*/files/**", "!xmlrpc.php", "!modules/php/*"],
    "projFiles": ["README*", "bin/**"]
  },
  "phpcs": {
    "path": "bin/phpcs",
    "standard": "vendor/drupal/coder/coder_sniffer/Drupal",
    "report": "summary",
    "dir": [
      "src/**/*.php",
      "src/**/*.module",
      "src/**/*.inc",
      "src/**/*.install",
      "src/**/*.profile",
      "!src/modules/iasc_scrape/**/*.php",
      "!src/sites/**",
      "!src/**/*.box.inc",
      "!src/**/*.features.*inc",
      "!src/**/*.pages_default.inc",
      "!src/**/*.panelizer.inc",
      "!src/**/*.strongarm.inc",
      "!src/**/*.views.inc",
      "!src/modules/oa_apachesolr/**"
    ]
  },
  "phpmd": {
    "path": "bin/phpmd"
  },
  "drush": {
    "cmd": "/usr/bin/drush",
    "path": "/usr/bin/drush",
    "make": {
      "args": ["--concurrency=2", "--contrib-destination=profiles/openatrium", "--force-complete"]
    }
  },
  "behat": {
    "flags": "--tags ~@wip"
  }
}